{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "fiction-build",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015",
      "esnext",
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
      "**/*.spec.ts",
      "**/*.snap"
  ]
}